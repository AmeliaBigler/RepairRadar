<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card" id="newTicket">
        <div class="card-header d-flex justify-content-center">
          <h2>Create a New Ticket</h2>
        </div>
        <div class="card-body">
          <form class="form ticket-form">
            <div class="form-group p-1">
              <label for="title">Title:</label>
              <input class="form-control" type="text" id="title" />
            </div>
            <div class="form-group p-1">
              <label for="car-make">Car Make:</label>
              <input class="form-control" type="text" id="carMake" />
            </div>
            <div class="form-group p-1">
              <label for="car-model">Car Model:</label>
              <input class="form-control" type="text" id="carModel" />
            </div>
            <div class="form-group p-1">
              <label for="car-model">Model Year:</label>
              <input class="form-control" type="number" id="modelYear" />
            </div>
            <div class="form-group p-1">
              <label for="issue">Issue:</label>
              <textarea class="form-control" id="issue" rows="3"></textarea>
            </div>
            <fieldset>
              <legend>Where is the car located?</legend>
              <div class="form-group p-1">
              <label for="street">Address:</label>
              <input id="street" type="text" pattern="^\d+\s[A-z\s\d#\-.,\/]+$">
              </div>
              <div class="form-group p-1">
              <label for="city">City:</label>
              <input id="city" type="text">
              </div>
              <div class="form-group p-1">
              <label for="state">State:</label>
              <input id="state" type="text">
              </div>
              <div class="form-group p-1">
              <label for="zip">Zip:</label>
              <input id="zip" type="number" aria-describedby="zipHelp">
              <p id="zipHelp">Caution! This address will be associated with the ticket. If an incorrect address is inputed, the mechanic may not be able to find your car!</p>
              </div>
            </fieldset>
            <div class="form-group p-3 d-flex justify-content-center">
              <button class="btn btn-primary col-4" type="button">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Error</h5>
        <button type="button" class="btn-close close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button id="close" type="button" class="btn btn-danger close" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<script src="/js/newTicket.js"></script>