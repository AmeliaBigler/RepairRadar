<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Login</h2>
          {{#if messages}}
          <div class="alert alert-danger" role="alert">
            <p>{{messages}}</p>
          </div>
          {{/if}}
          <form class="form login-form">
            <div class="form-group" id="loginForms">
              <label for="email-login">Email:</label>
              <input class="form-control" type="email" id="email-login" />
            </div>
            <div class="form-group" id="loginForms">
              <label for="password-login">Password:</label>
              <input class="form-control" type="password" id="password-login" />
            </div>
            <div class="container text-center">
              <div class="row" id="loginButtons">
                <div class="col">
                  <button class="btn btn-primary col-8" type="submit" id="loginbtn">Login</button>
                </div>
                <div class="col">
                  <button class="btn btn-primary col-8" type="click" id="submitBtn">Sign Up</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>